{{#each posts}}
  <div class="card">
    <div class="card-header">
      <h2>{{this.title}}</h2>
      <!-- Access title directly within each post object -->
      <span>Posted by {{this.author}} on {{formatDate this.createdAt}}</span>
    </div>
    <div class="card-body">
      <p>{{this.content}}</p>
      <!-- Access content directly within each post object -->
    </div>
  </div>
{{/each}}